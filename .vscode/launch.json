  "version": "0.2.0",
  "compounds": [{
    "name": "Launch",
    "configurations": ["Middleman", "Chrome"]
  }],
  "configurations": [{
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4567",
      "webRoot": "${workspaceFolder}"
    }, {
    "name": "Middleman",
    "type": "Ruby",
    "request": "launch",
    "useBundler": true,
    "cwd": "${workspaceRoot}",
    "program": "${workspaceRoot}/vendor/bundle/bin/middleman",
    "args": [
      "server"
    ]
  }]
}